<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.hunterxhunterprofilemanagement.HxhController">

    <top>
        <HBox spacing="20" style="-fx-padding: 10;">
            <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Hunter x Hunter Profile Management" HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <left>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #f6f6f6; -fx-border-color: #ccc;">
            <ImageView fx:id="imagePreview" fitHeight="160" fitWidth="160" preserveRatio="true" />

            <Button fx:id="uploadBtn" text="Upload Image" />

            <Label text="Last Name" />
            <TextField fx:id="lastNameField" />

            <Label text="Given Name" />
            <TextField fx:id="givenNameField" />

            <Label text="Middle Name" />
            <TextField fx:id="middleNameField" />

            <Label text="Nen Type" />
            <ComboBox fx:id="nenTypeBox" />

            <Label text="Affiliation" />
            <TextField fx:id="rankField" />

            <HBox spacing="10">
                <Button fx:id="saveBtn" text="Save" />
                <Button fx:id="clearBtn" text="Clear" />
                <Button fx:id="deleteBtn" text="Delete" />
            </HBox>

        </VBox>
    </left>

    <center>
        <TableView fx:id="tableView">
            <columns>
                <TableColumn fx:id="imageCol" prefWidth="120" text="Image" />
                <TableColumn fx:id="lastNameCol" text="Last Name" />
                <TableColumn fx:id="givenNameCol" text="Given Name" />
                <TableColumn fx:id="middleNameCol" text="Middle Name" />
                <TableColumn fx:id="nenTypeCol" text="Nen Type" />
                <TableColumn fx:id="rankCol" text="Affiliation" />
            </columns>
        </TableView>
    </center>

</BorderPane>
